[user]
  name = shogogg
  email = shogo@studiofly.net
[alias]
  amend = commit --amend
  br = branch
  brd = "!git branch | grep -v '*' | fzf --preview 'echo {} | cut -c 3- | xargs git log --color=always' | xargs git br -d"
  ci = commit
  co = checkout
  cp = cherry-pick
  fap = !git fetch --all -p && git pull
  graph = log --graph --date=short --decorate=short --pretty
  logs = "!f() { git log --color=always --oneline $@ | emojify; }; f"
  me = merge --no-commit --no-ff
  rbc = rebase --continue
  rbi = rebase -i
  sm = submodule
  st = status
  stat = status
  sw = "!git branch --all | sed 's#remotes/[^/]*/##' | grep -v '*' | sort | uniq | fzf --preview 'echo {} | cut -c 3- | xargs git log --color=always' | xargs git switch"
  up = !gitup
  wip = ![[ $(git log --oneline | head -n 1 | cut -d ' ' -f 2) == 'WIP' ]] && git add --all && git commit --amend -m WIP || git commit -m WIP
[color]
  ui = true
[pull]
  rebase = true
[push]
  default = current
[merge]
  ff = false
[core]
  excludesfile = ~/.config/git/.gitignore
  autocrlf = input
  editor = vim
